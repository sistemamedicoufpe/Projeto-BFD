# Database Provider: firebase | postgresql | indexeddb
# For GitHub Pages, use: firebase
# For local development with backend, use: postgresql
# For offline-only mode, use: indexeddb
VITE_DATABASE_PROVIDER=indexeddb

# API Configuration (only needed for postgresql provider)
VITE_API_URL=http://localhost:3000/api/v1

# Firebase Configuration (only needed for firebase provider)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id

# Encryption Key (must match backend ENCRYPTION_KEY)
# Generate with: openssl rand -base64 32
VITE_ENCRYPTION_KEY=your-aes-256-encryption-key-must-be-32-chars-minimum

# Application Settings
VITE_APP_NAME=NeuroCare Diagnostic System
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_2FA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# Sync Settings
VITE_SYNC_INTERVAL_MINUTES=5
VITE_MAX_SYNC_RETRIES=3

# IndexedDB
VITE_INDEXEDDB_NAME=NeuroCareDB
VITE_INDEXEDDB_VERSION=1

# Cache Settings
VITE_SERVICE_WORKER_CACHE_NAME=neurocare-v1

# Monitoring (optional)
VITE_SENTRY_DSN=
VITE_ENABLE_ANALYTICS=false

# Development
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=info
