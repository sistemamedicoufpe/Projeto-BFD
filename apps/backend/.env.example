# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://neurocare:neurocare_dev_2024@localhost:5432/neurocare_db?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=your-aes-256-encryption-key-32-chars-min
ENCRYPTION_MASTER_KEY=your-master-key-for-key-encryption

# AWS S3 / MinIO
AWS_S3_ENDPOINT=http://localhost:9000
AWS_S3_BUCKET=neurocare-files
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug

# SMTP (para emails - opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,application/dicom

# Data Retention
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=1825

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=1800000
